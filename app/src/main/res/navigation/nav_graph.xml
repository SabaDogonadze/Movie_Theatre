<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="">


    <include app:graph="@navigation/" />





    <navigation
        android:id="@+id/navigation"
        app:startDestination="@id/login_graph">
        <include app:graph="@id/login_graph" />


        <action
            android:id="@+id/action_global_homeFragment"
            app:destination="@id/id_home_fragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />

    </navigation>

    <fragment
        android:id="@+id/seatFragment"
        android:name="com.example.feature.seat.presentation.screen.seat.SeatFragment"
        android:label="fragment_seat"
        tools:layout="@layout/fragment_seat">
        <argument
            android:name="screeningId"
            app:argType="integer" />
        <argument
            android:name="ticketPrice"
            app:argType="float" />
        <action
            android:id="@+id/action_seatFragment_to_paymentFragment"
            app:destination="@id/paymentFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_seatFragment_to_panoramaFragment"
            app:destination="@id/panoramaFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/addCardFragment"
        android:name="com.example.feature.payment.presentation.screen.add_card.AddCardFragment"
        android:label="fragment_add_card"
        app:enterAnim="@anim/from_right"
        app:exitAnim="@anim/to_left"
        app:popEnterAnim="@anim/from_left"
        app:popExitAnim="@anim/to_right"
        tools:layout="@layout/fragment_add_card" />
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.example.feature.payment.presentation.screen.payment.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment">
        <action
            android:id="@+id/action_paymentFragment_to_addCardFragment"
            app:destination="@id/addCardFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <argument
            android:name="screeningId"
            app:argType="integer" />
        <argument
            android:name="seats"
            app:argType="string[]" />
        <argument
            android:name="totalPrice"
            app:argType="float" />
        <action
            android:id="@+id/action_paymentFragment_to_id_home_fragment"
            app:destination="@id/id_home_fragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"
            app:popUpTo="@id/id_home_fragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/id_profile_fragment"
        android:name="com.example.movietheatre.feature_profile.presentation.screen.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_id_profile_fragment_to_ticketBookedFragment"
            app:destination="@id/ticketHeldFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_id_profile_fragment_to_ticketBookedFragment2"
            app:destination="@id/ticketBookedFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_id_profile_fragment_to_myShopFragment"
            app:destination="@id/myShopFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/ticketHeldFragment"
        android:name="com.example.movietheatre.feature_profile.presentation.screen.TicketHeldFragment"
        android:label="fragment_ticket_held"
        tools:layout="@layout/fragment_ticket_held">
        <action
            android:id="@+id/action_ticketHeldFragment_to_paymentFragment"
            app:destination="@id/paymentFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/qrCodeFragment"
        android:name="com.example.movietheatre.feature_profile.presentation.screen.QrCodeFragment"
        android:label="fragment_qr_code"
        tools:layout="@layout/fragment_qr_code" />
    <fragment
        android:id="@+id/ticketBookedFragment"
        android:name="com.example.movietheatre.feature_profile.presentation.screen.TicketBookedFragment"
        android:label="TicketBookedFragment">
        <action
            android:id="@+id/action_ticketBookedFragment_to_qrCodeFragment"
            app:destination="@id/qrCodeFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/shopFragment"
        android:name="com.example.feature.shop.presentation.screen.ShopFragment"
        android:label="fragment_shop"
        tools:layout="@layout/fragment_shop" />
    <fragment
        android:id="@+id/myShopFragment"
        android:name="com.example.movietheatre.feature_profile.presentation.my_shop.MyShopFragment"
        android:label="fragment_my_shop"
        tools:layout="@layout/fragment_my_shop" />
    <fragment
        android:id="@+id/panoramaFragment"
        android:name="com.example.feature.seat.presentation.screen.panorama.PanoramaFragment"
        android:label="fragment_panorama"
        tools:layout="@layout/fragment_panorama" />
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.movietheatre.feature_movie_quiz.presentation.screen.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz">
        <argument
            android:name="categoryId"
            app:argType="integer" />
        <action
            android:id="@+id/action_quizFragment_to_quizCategoryFragment"
            app:destination="@id/quizCategoryFragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_left"
            app:popUpTo="@id/quizCategoryFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="coins"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/quizCategoryFragment"
        android:name="com.example.movietheatre.feature_movie_quiz.presentation.screen.QuizCategoryFragment"
        android:label="QuizCategoryFragment">
        <action
            android:id="@+id/action_quizCategoryFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>
    <dialog
        android:id="@+id/quizResultDialog"
        android:name="com.example.movietheatre.feature_movie_quiz.presentation.screen.dialog.QuizResultDialog"
        android:label="QuizResultDialog">
        <action
            android:id="@+id/action_quizResultDialog_to_quizCategoryFragment"
            app:destination="@id/quizCategoryFragment" />
    </dialog>

</navigation>